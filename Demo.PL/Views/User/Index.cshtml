@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "All Users";
}
<h1>Users</h1>
<br />
<nav class="navbar navbar-light bg-light">
    <form asp-action="Index" class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search By Email" name="Email">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
</nav>
@if(Model.Count()>0)
{
    <table class="mt-4 table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(U => U.Id)</th>
                <th>@Html.DisplayNameFor(U => U.Fname)</th>
                <th>@Html.DisplayNameFor(U => U.LName)</th>
                <th>@Html.DisplayNameFor(U => U.Email)</th>
                <th>@Html.DisplayNameFor(U => U.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(U => U.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Fname</td>
                    <td>@user.LName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@string.Join(",",user.Roles)</td>
                    <partial name="_ButtonPartial" model="@user.Id" />
                </tr>
            }
               
        </tbody>
    </table>
}
else
{
    <div class="mt-4 p-4 alert-warning">
            <h2>There is no Users</h2>
    </div>
}


